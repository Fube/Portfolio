---
export type Props = {
	title?: string;
}

const { title = "Fube" } = Astro.props;
---

<!DOCTYPE html>

<html lang="en" data-theme="dracula">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={title} />
		<link rel="icon" href="/favicon.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
    @tailwind base;

    @layer base {
            h1,
            h2,
            h3,
            h4 {
                    @apply font-bold;
            }
    }

    html {
            @apply font-mono !bg-base-300;
    }

    *::-webkit-scrollbar {
            display: none;
    }

    * {
            -ms-overflow-style: none; /* IE and Edge */
            scrollbar-width: none; /* Firefox */
    }
</style>
